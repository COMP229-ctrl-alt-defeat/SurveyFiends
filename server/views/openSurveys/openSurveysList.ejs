<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

  <!-- Main Content -->

  <main class="section mt nl-section custom-container-shrink">
    <h1 class="section-title"><%= title %></h1>

      <div class="container">
        
        <table class="table-s1">
          <!-- Header Row-->
          <!-- Header Row-->
          <tr class="d-flex">
            <th class="text-center col-3">Survey Name</th>
            <th class="text-center col-3">Description</th>
            <th class="text-center col-2">Activation Date</th>
            <th class="text-center col-2">Expiry Date</th>
            <th class="text-center col-2">Answers</th>
        </tr>

        <!-- Repeatable Template Row -->

        <% for(let count = 0; count < Surveys.length; count++) { %>
          <% if(Surveys[count].activationDate < Date.now()){ %> 
            <tr class="d-flex">
                <td class="text-center col-3"><a href='/openSurveysList/<%= Surveys[count]._id %>'><%= Surveys[count].surveyName %></a></td>
                <td class="text-center col-3"><%= Surveys[count].surveyDescription %></td>
                <td class="text-center col-2"><%= Surveys[count].activationDate.toDateString() %></td>
                <td class="text-center col-2" id="expiryDate"><%= Surveys[count].expiryDate.toDateString() %></td>
                <td class="text-center col-2"><a href='/results/<%= Surveys[count]._id %>'>User Entries</a></td>
            </tr>
          <% } %>  
        <% } %>
      </table>

    </div>

  </main>
  
<%- include ../partials/bottom_nav.ejs %>  

<%- include ../partials/footer.ejs %>